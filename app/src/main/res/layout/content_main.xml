<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewState"
                type="com.farazpardazan.weather.presentation.viewstate.WeatherDataVS" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:padding="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".presentation.view.ui.MainActivity"
            tools:showIn="@layout/activity_main">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/currentWeatherPanel"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:background="#AAAAAA">

                    <TextView
                            android:id="@+id/currentTemp"
                            android:layout_width="128dp"
                            android:layout_height="64dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="32dp"
                            android:gravity="left|center_vertical"
                            android:hint="23°"
                            android:text="@{viewState.overallWeatherData.current.temp.toString()}"/>

                    <TextView
                            android:id="@+id/todayRange"
                            android:layout_width="128dp"
                            android:layout_height="64dp"
                            android:layout_below="@+id/currentTemp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="4dp"
                            android:gravity="left|center_vertical"
                            android:text="24°/19°" />

                    <TextView
                            android:id="@+id/currentCity"
                            android:layout_width="128dp"
                            android:layout_height="64dp"
                            android:layout_below="@+id/todayRange"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="4dp"
                            android:gravity="left|center_vertical"
                            android:text="New York" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/hourlyWeatherPanel"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:background="#BBBBBB">

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/dailyWeatherPanel"
                        android:layout_width="match_parent"
                        android:layout_height="512dp"
                        android:background="#CCCCCC">

                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
